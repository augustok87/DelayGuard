{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "src/server.ts",
    "src/database/**/*",
    "src/queue/**/*",
    "src/routes/**/*",
    "src/services/**/*",
    "src/backup/**/*",
    "src/observability/**/*",
    "src/middleware/**/*",
    "src/utils/monitoring.ts",
    "src/utils/cache.ts",
    "src/components/__tests__/**/*",
    "tests/**/*",
    "node_modules",
    "dist",
    "coverage",
    "**/*.polaris.tsx",
    "**/*.polaris.ts"
  ]
}
