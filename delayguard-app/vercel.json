{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    },
    "api/simple.ts": {
      "maxDuration": 30
    },
    "api/logger.ts": {
      "maxDuration": 30
    },
    "api/health.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/tracking-refresh",
      "schedule": "0 0 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
