{
  "version": 2,
  "name": "delayguard",
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/server.ts"
    },
    {
      "src": "/webhooks/(.*)",
      "dest": "/src/server.ts"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/src/server.ts"
    },
    {
      "src": "/health",
      "dest": "/src/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "src/server.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "framework": null
}
