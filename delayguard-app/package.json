{
  "name": "delayguard",
  "version": "1.0.0",
  "description": "Proactive shipping delay notification app for Shopify merchants",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "ts-node src/server.ts",
    "dev:client": "webpack serve --mode development",
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --mode production",
    "build:server": "tsc",
    "start": "node dist/server.js",
    "vercel-build": "npm run build:client",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "db:migrate": "ts-node src/database/migrate.ts",
    "db:migrate:prod": "NODE_ENV=production ts-node src/database/migrate.ts",
    "load-test": "ts-node scripts/load-test.ts",
    "load-test:basic": "ts-node scripts/load-test.ts basic",
    "load-test:webhook": "ts-node scripts/load-test.ts webhook",
    "load-test:stress": "ts-node scripts/load-test.ts stress",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "postinstall": "npm run build:client"
  },
  "dependencies": {
    "@shopify/shopify-api": "^8.0.0",
    "@shopify/koa-shopify-auth": "^4.0.0",
    "@shopify/koa-shopify-graphql-proxy": "^4.0.0",
    "@shopify/polaris": "^12.0.0",
    "@shopify/app-bridge": "^4.0.0",
    "@shopify/app-bridge-react": "^4.0.0",
    "koa": "^2.14.0",
    "koa-router": "^12.0.0",
    "koa-bodyparser": "^4.4.0",
    "koa-session": "^6.0.0",
    "koa-static": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@sendgrid/mail": "^8.0.0",
    "twilio": "^4.0.0",
    "bullmq": "^4.0.0",
    "ioredis": "^5.0.0",
    "pg": "^8.11.0",
    "dotenv": "^16.3.0",
    "crypto": "^1.0.1",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/jest": "^29.5.0",
    "@types/koa": "^2.13.0",
    "@types/koa-router": "^7.4.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-session": "^6.0.0",
    "@types/koa-static": "^4.0.0",
    "@types/pg": "^8.10.0",
    "@types/supertest": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.6.0",
    "style-loader": "^3.3.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.1.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup/test-setup.ts"],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.test.{ts,tsx}",
      "!src/**/*.spec.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}